<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE configuration>
<!-- logback.xml -->
<!-- All Rights Reserved, Copyright(c) Fujitsu Learning Media Limited -->
<configuration>
	<appender name="mylog" class="ch.qos.logback.core.ConsoleAppender">
		<encoder>
			<pattern>%highlight([ %-5level ]) %d{yyyy/MM/dd HH:mm:ss} %gray(%-15logger{0}) : %boldBlue(%msg%n)</pattern>
		</encoder>
	</appender>

	<logger name="jp.co.tsys" level="debug" />

	<root level="info">
		<appender-ref ref="mylog" />
	</root>
</configuration>